		textField_5.setColumns(10);
		
		JButton submit = new JButton("버튼");
		submit.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
			
				JFileChooser chooser = new JFileChooser();
				int result = chooser.showOpenDialog(area);	
				if (result != JFileChooser.APPROVE_OPTION)
					return;

				String filePath = chooser.getSelectedFile().getPath();
				try {
					BufferedReader reader = new BufferedReader(new FileReader(filePath));
					while (true) {
						String line = reader.readLine();
						if (line == null)
							break;
						area.setText(area.getText() + line);
					}
					reader.close();

				} catch (IOException e1) {
					e1.printStackTrace();
				}
			
			}
		});
		submit.setBounds(12, 364, 97, 54);
		contentPane.add(submit);
		
		area = new JTextArea();
		area.setRows(20);
		area.setColumns(30);
		area.setBounds(117, 324, 428, 230);
		contentPane.add(area);
		
		JLabel text = new JLabel("a");
		text.setBounds(52, 448, 57, 15);
		contentPane.add(text);
	}
