		textField.setText("\uBCF5\uC218\uC804\uACF5");
		textField.setBounds(120, 10, 292, 65);
		contentPane.add(textField);
		textField.setColumns(10);
		
		JButton btnNewButton = new JButton("1\uC804\uACF5");
		btnNewButton.setFont(new Font("굴림", Font.PLAIN, 20));
		btnNewButton.setBounds(12, 144, 115, 50);
		contentPane.add(btnNewButton);
		
		JButton btnNewButton_1 = new JButton("\uBCF5\uC218\uC804\uACF5");
		btnNewButton_1.setFont(new Font("굴림", Font.PLAIN, 20));
		btnNewButton_1.setBounds(12, 204, 115, 56);
